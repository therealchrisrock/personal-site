{
  "name": "personal-site",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build:dev": "node esbuild.config.js --sourcemap --watch",
    "build:analysis": "node esbuild.config.js --metafile --minify",
    "watch": "npx esbuild ./internal/ts/**/*.ts --bundle --outdir=./static/js --format=esm --splitting --metafile=tmp/meta.json --sourcemap --watch",
    "display": "esbuild-visualizer --metadata=tmp/meta.json --open=true --filename tmp/stats.html",
    "analysis": "bun run build && bun run display",
    "analysis:treemap": "bun run build && bun run display --sunburst",
    "analysis:network": "bun run build && bun run display --template network",
    "prepare": "husky",
    "build:css": "npx tailwind -i './static/css/input.css' -o './static/css/output.css'", 
    "build:ts": "npx esbuild ./internal/ts/**/*.ts --bundle --outdir=./static/js --format=esm --splitting --metafile=tmp/meta.json --minify",
    "build": "bun run build:css && bun run build:ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "d3": "^7.9.0",
    "htmx.org": "^1.9.12",
    "lucide": "^0.469.0",
    "tailwindcss": "^3.4.17",
    "three": "^0.172.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@tailwindcss/typography": "^0.5.16",
    "@types/bun": "latest",
    "@types/d3": "^7.4.3",
    "@types/node": "^22.10.5",
    "commitlint": "^19.6.1",
    "esbuild": "^0.24.2",
    "esbuild-visualizer": "^0.7.0",
    "flowbite-typography": "^1.0.5",
    "husky": "^9.1.7",
    "postcss": "^8.4.49",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "trustedDependencies": [
    "es5-ext",
    "fsevents"
  ]
}
