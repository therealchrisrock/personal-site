{
  "compilerOptions": {
    "target": "ES6",
    "module": "NodeNext",
    "outDir": "./static/js",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "sourceMap": true
  },
  "include": ["internal/ts/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}